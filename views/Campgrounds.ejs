<%- include('partials/header') -%>
<div class="container">
<header class="jumbotron">
    <div class="container">
        <h1>Welcome to YelpCamp</h1>
        <p>A handpicked campgrounds all over the world..</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campground/new">Add new Campground</a>
        </p>
    </div>
</header>
<div class="row" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(campgrounds){ %>
    <div class="col-md-4 col-sm-6">
        <div class="thumbnail">
            <img id="imagesize" src="<%= campgrounds.image %>">
            <div class="caption">
                <h4><%= campgrounds.name %></h4>
            </div>
            <p style="text-align: center;">
                <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More info</a>
            </p>
        </div>
    </div>
    <% }) %>
</div>
</div>
<%- include('partials/footer') -%>